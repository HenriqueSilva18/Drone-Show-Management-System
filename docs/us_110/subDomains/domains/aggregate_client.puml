@startuml
hide methods

package "Aggregate Client " {

    ' Agregado Client (Aggregate Root)
    class Client <<AggregateRoot>> {
        id: ClientId
        name: ClientName
        vat: String
        address: String
        status: ClientStatus
        representatives: List<Representative>
    }

    ' Value Objects do Client
    class ClientId <<(V, #007fff) ValueObject>> {
        value: String
    }

    class ClientName <<(V, #007fff) ValueObject>> {
        value: String
    }

    class ClientStatus <<(V, #007fff)ValueObject>> {
        value: String
    }

    ' Representante (Gestor do sistema é um tipo de User, aqui é o representante do cliente)
    class Representative <<Entity>> {
        id: RepresentativeId
        userId: UserId
        position: String
        active: Boolean
    }

    class RepresentativeId <<(V, #007fff) ValueObject>> {
        value: String
    }

    class UserId <<(V, #007fff) ValueObject>> {
        value: String
    }

    Client --> ClientId
    Client --> ClientName
    Client --> ClientStatus
    Client "1" -- "*" Representative : has
    Representative --> RepresentativeId
    Representative --> UserId
}
@enduml
