@startuml
package "User Management and Authentication" {
    ' Entidade de usuário com dados de autenticação
    class User <<Entity>> {
        - id: UserId
        - username: Username
        - password: Password
        - email: String
        - phone: String
    }

    ' Value Objects para identificação e credenciais
    class UserId <<ValueObject>> {
        - value: String
    }
    class Username <<ValueObject>> {
        - value: String
    }
    class Password <<ValueObject>> {
        - value: String
    }

    ' Repositório para persistência dos usuários
    interface UserRepository <<Repository>> {
        + save(user: User): void
        + findById(id: UserId): User
    }

    ' Serviço de autenticação, responsável pelo login/logout
    class AuthService <<ApplicationService>> {
        + login(username: Username, password: Password): User
        + logout(user: User): void
    }

    User --> UserId
    User --> Username
    User --> Password
}
@enduml
