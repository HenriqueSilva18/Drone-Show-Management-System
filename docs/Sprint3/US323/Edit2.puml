@startuml
skinparam packageStyle rectangle
skinparam classAttributeIconSize 0
skinparam shadowing false

actor CRM
participant EditMaintenanceTypeUI
participant EditMaintenanceTypeController
participant MaintenanceTypeRepository
participant MaintenanceType

CRM -> EditMaintenanceTypeUI : edit maintenance type
EditMaintenanceTypeUI -> EditMaintenanceTypeController : editType(id, newName, newDesc)
EditMaintenanceTypeController -> MaintenanceTypeRepository : findById(id)
MaintenanceTypeRepository --> EditMaintenanceTypeController : MaintenanceType
EditMaintenanceTypeController -> MaintenanceType : update(newName, newDesc)
EditMaintenanceTypeController -> MaintenanceTypeRepository : save(type)
EditMaintenanceTypeController --> EditMaintenanceTypeUI : success
EditMaintenanceTypeUI -> CRM : show confirmation
@enduml
